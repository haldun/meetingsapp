<h1>My Rooms</h1>

<table class="rooms">
<% rooms.each do |room| %>
  <tr>
    <td>
      <h3>
        <%= link_to room, room %> <small><%= room.online_users_count %> users online</small>
      </h3>
      <%= room.topic %>
    </td>
    <td class="row-actions">
      <%= link_to 'Delete', room, confirm: 'Are you sure?', method: :delete, class: 'btn danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= paginate rooms %>

<%= link_to 'New Room', new_room_path %>
